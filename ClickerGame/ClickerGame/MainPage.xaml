<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClickerGame"
             x:Class="ClickerGame.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="Start" HeightRequest="80">
            <Image x:Name="SettingsButton" Source="icon_settings.png"></Image>
            <StackLayout HorizontalOptions="CenterAndExpand">
                <Label x:Name="CurrentValueGain" Text="{Binding CurrentValue}"
                    FontSize="Large"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label x:Name="CurrentValuePower" Text="{Binding CurrentPower}"
                    FontSize="Small"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </StackLayout>
            <Image x:Name="AchievementsButton" Source="icon_achievements.png"></Image>
        </StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand">
            <StackLayout Orientation="Horizontal">
                <Picker x:Name="BonusPicker" Title="Bonuses" VerticalOptions="Start" HorizontalOptions="FillAndExpand" ItemsSource="{Binding Bonuses}" ItemDisplayBinding="{Binding TempDisplayName}" />
                <Button x:Name="PurchaseButton" Text="Buy" Clicked="PurchaseButton_Clicked"></Button>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <StackLayout Orientation="Vertical">
                    <Label Text="1" HorizontalOptions="Center"></Label>
                    <Switch HorizontalOptions="Center"></Switch>
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="10" HorizontalOptions="Center"></Label>
                    <Switch HorizontalOptions="Center"></Switch>
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="100" HorizontalOptions="Center"></Label>
                    <Switch HorizontalOptions="Center"></Switch>
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="Max" HorizontalOptions="Center"></Label>
                    <Switch HorizontalOptions="Center"></Switch>
                </StackLayout>
            </StackLayout>
            <!--<ListView  x:Name="GeneratorListView" ItemsSource="{Binding Generators}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="#eee"
                        Orientation="Vertical">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="{Binding image}" />
                                    <Label Text="{Binding Name}"
                                TextColor="#f35e20" />
                                    <Label Text="{Binding Description}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#503026" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <ListView 
                  ItemsSource="{Binding Departments}" CachingStrategy="RecycleElement" RowHeight="80">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ContentView>
                                <StackLayout Orientation="Horizontal" Padding="5,2.5,0,2.5">
                                    <Image Source="{Binding Thumbnail}" HeightRequest="75" WidthRequest="75" Aspect="AspectFit"/>
                                    <StackLayout Orientation="Vertical" 
                                           HorizontalOptions="FillAndExpand" Spacing="0">
                                        <Label Text="{Binding Name}" 
                                               FontSize="Medium"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" 
                                               FontSize="Micro"/>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="Available:" 
                                               FontSize="Medium" />
                                            <Label Text="{Binding AvailableAmount}" 
                                               FontSize="Medium"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <Button Text="Buy" HorizontalOptions="End" VerticalOptions="Center"></Button>
                                </StackLayout>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

        <StackLayout Orientation="Horizontal" VerticalOptions="End">
            <Button x:Name="ClickButton" Clicked="ClickButton_Clicked" Text="Click Me!" HorizontalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="75" Margin="0,25" />
        </StackLayout>
    </StackLayout>
    
</ContentPage>
