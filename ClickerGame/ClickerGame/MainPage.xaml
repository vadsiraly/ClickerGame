<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClickerGame"
             x:Class="ClickerGame.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="Start">
            <Label x:Name="MyLabel" Text="{Binding CurrentValue}" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand">
            <StackLayout Orientation="Horizontal">
                <Picker x:Name="BonusPicker" Title="Bonuses" VerticalOptions="Start" HorizontalOptions="FillAndExpand" ItemsSource="{Binding Bonuses}" ItemDisplayBinding="{Binding TempDisplayName}" />
                <Button x:Name="PurchaseButton" Clicked="PurchaseButton_Clicked"></Button>
            </StackLayout>
        </StackLayout>

        <StackLayout Orientation="Horizontal" VerticalOptions="End">
            <Button x:Name="ClickButton" Clicked="ClickButton_Clicked" Text="Click Me!" HorizontalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="150" Margin="0,50" />
        </StackLayout>
    </StackLayout>
    
</ContentPage>
